@model List<LibraryManagement.Models.LibraryBranch>

<h2>Library Management Branch</h2>
<a href="@Url.Action("Create", "LibraryBranch")" class="btn btn-primary">Create Branch</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var libraryBranch in Model)
        {
            <tr>
                <td>@libraryBranch.LibraryBranchId</td>
                <td>@libraryBranch.BranchName</td>
                <td>
                    <a href="@Url.Action("Edit", "LibraryBranch", new { id = libraryBranch.LibraryBranchId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "LibraryBranch", new { id = libraryBranch.LibraryBranchId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
        throw new Exception("This is a deliberate exception for testing purposes.");
    }